---
import HeaderLayout from "../layouts/HeaderLayout.astro";
import PrimarySection from "../components/PrimarySection.astro";
import "../styles/global.css";
---
<div id="app">
	<HeaderLayout>
		<PrimarySection />
	</HeaderLayout>
</div>

<style is:global>
#app {
  font-family: Rubik, "Helvetica Neue", Helvetica, Arial, sans-serif;
  color: #262626;
}
.large {
  font-size: 3.775em;
  line-height: 1.1;
  font-weight: 600;
}
.standard {
  font-size: 1.5em;
  line-height: 1.3;
  font-weight: 400;
}
.navigation {
  font-size: 1.1em;
  font-weight: 500;
  line-height: 1.5;
}
.section {
  border-top: 1px solid #ccc;
}
</style>