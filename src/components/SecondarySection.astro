---
interface Props {
	title?: string;
	excerpt?: string;
	backgroundPath?: string;
};
import BlockButton from './core/BlockButton';
const { title = 'Block title here', excerpt = 'Block excerpt here', backgroundPath = '/' };
---
<section
    class='promotional-block'
  >
    <div class='foreground'>
      <img
        src=backgroundPath
        alt='CM1009-scaled'
        width='100%'
        height='100%'
      >
    </div>
    <div class='container'>
      <h2 class='promotional-block-title'>
        { title }
      </h2>
      <p class='standard promotional-block-excerpt'>
        { excerpt }
      </p>
      <BlockButton 
        textColor='white'
        title='Learn more about us'
        backgroundColor='transparent'
      />
    </div>
  </section>
<style>
img {
  margin-right: 0.6667em;
}
.container {
  display: flex;
  padding: 0.6667em 1.5em;
}
.list-item:hover {
  background: #ececec;
}
.list-item {
  height: 100%;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}
</style>
